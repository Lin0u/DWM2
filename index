<body>

    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid container">
            <a class="navbar-brand" href="index.html">🥗 Fit Express</a>
            <div class="d-flex">
                <a class="nav-link cart-icon me-3" href="Carrito.html">
                    🛒 
                    <span class="cart-badge" id="cart-count">0</span>
                </a>
                <a class="nav-link text-light btn btn-sm btn-outline-secondary" href="Login.html" id="auth-link">
                    Iniciar Sesión
                </a>
                <a class="nav-link text-light btn btn-sm btn-danger ms-2 d-none" href="#" id="logout-button">
                    Salir
                </a>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h1 class="text-center mb-5 text-light">Menú de Bowls Saludables 💪</h1>

        <div class="row row-cols-1 row-cols-md-3 g-4" id="products-list">
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Array de productos (Bowls de Fit Express)
        const products = [
            { id: "bowl001", name: "Bowl Proteico Keto", description: "Base de coliflor, pollo a la plancha, palta, queso feta y nueces. ¡Bajo en carbohidratos!", category: "Keto", price: 8500, stock: 50, imageUrl: "keto.jpg" },
            { id: "bowl002", name: "Bowl Vegano Power", description: "Base de quinoa, garbanzos, tofu marinado, espinacas frescas y vinagreta de limón.", category: "Vegano", price: 7800, stock: 40, imageUrl: "vegano.jpg" },
            { id: "bowl003", name: "Bowl Clásico Fit", description: "Base de arroz integral, salmón ahumado, edamames, zanahoria rallada y sésamo.", category: "Clásico", price: 9200, stock: 60, imageUrl: "clasico.jpg" },
            { id: "bowl004", name: "Bowl Desintoxicante", description: "Base de mix de hojas verdes, pepino, manzana verde, apio y aderezo de jengibre. Ideal para depurar.", category: "Detox", price: 7500, stock: 35, imageUrl: "detox.jpg" }
        ];

        const formatCurrency = (number) => {
            return '$' + Math.round(number).toLocaleString('es-CL');
        };

        function getShoppingCart() {
            return JSON.parse(localStorage.getItem('shoppingCart')) || {};
        }

        function saveShoppingCart(cart) {
            localStorage.setItem('shoppingCart', JSON.stringify(cart));
        }

        function updateCartCount() {
            const cart = getShoppingCart();
            let totalItems = 0;
            Object.keys(cart).forEach(id => {
                totalItems += cart[id].quantity;
            });
            document.getElementById('cart-count').textContent = totalItems;
        }

        function renderProducts() {
            const container = document.getElementById('products-list');
            let html = '';

            products.forEach(product => {
                html += `
                    <div class="col">
                        <div class="card card-bowl">
                            <img src="https://via.placeholder.com/400x200?text=${product.name.replace(/ /g, '+')}" class="card-img-top" alt="Imagen del Bowl ${product.name}">
                            <div class="card-body">
                                <h5 class="card-title">${product.name}</h5>
                                <p class="card-text text-secondary mb-2">${product.description}</p>
                                <span class="badge bg-success mb-3">${product.category}</span>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="price-tag">${formatCurrency(product.price)}</span>
                                    <button type="button" class="btn btn-primary btn-add-cart" onclick="addToCart('${product.id}')">
                                        + Agregar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });
            container.innerHTML = html;
            updateCartCount();
        }

        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            if (!product) return;

            const cart = getShoppingCart();

            if (cart[productId]) {
                cart[productId].quantity += 1;
            } else {
                cart[productId] = {
                    id: product.id,
                    name: product.name,
                    price: product.price,
                    quantity: 1
                };
            }

            saveShoppingCart(cart);
            updateCartCount();
            alert(`"${product.name}" agregado al carrito.`);
        }

        function checkAuth() {
            const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
            const authLink = document.getElementById('auth-link');
            const logoutButton = document.getElementById('logout-button');

            if (isLoggedIn) {
                authLink.textContent = 'Mi Cuenta';
                authLink.href = 'HistorialPedidos.html'; // Redirige a historial
                logoutButton.classList.remove('d-none');
            } else {
                authLink.textContent = 'Iniciar Sesión';
                authLink.href = 'Login.html';
                logoutButton.classList.add('d-none');
            }
        }

        document.getElementById('logout-button').addEventListener('click', function(event) {
            event.preventDefault();
            localStorage.removeItem('isLoggedIn');
            localStorage.removeItem('userEmail');
            checkAuth();
            alert('Sesión cerrada.');
            window.location.href = "index.html";
        });

        window.onload = () => {
            renderProducts();
            checkAuth();
        };
    </script>
</body>
</html>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/main.js"></script>
    <script>
        // Los bowls y sus costos en puntos (Simulaci√≥n)
        const redeemableProducts = [
            { id: "b1", name: "Bowl Pollo Teriyaki", image: "img/Bowl Pollo.jpg", points: 8000 },
            { id: "b3", name: "Bowl Ensalada C√©sar", image: "img/Bowl Ensalada.jpg", points: 7000 },
            { id: "b2", name: "Bowl Lomo Saltado Fit", image: "img/Bowl Carne.jpg", points: 9500 }
        ];

        // Simulaci√≥n del saldo del usuario (ajusta este valor para probar)
        const userPoints = 10000; 

        // Funci√≥n para renderizar la tarjeta de canje
        function renderRedeemCard(product) {
            const canAfford = userPoints >= product.points;
            const cardClass = canAfford ? 'canjeable' : 'text-opacity-50'; // A√±ade borde verde si alcanza

            return `
                <div class="col">
                    <div class="card card-bowl card-redeem h-100 ${cardClass}">
                        <img src="${product.image}" class="card-img-top" alt="${product.name}">
                        <div class="card-body">
                            <h5 class="card-title">${product.name}</h5>
                            <p class="points-cost">${product.points.toLocaleString('es-CL')} Puntos</p>
                            <button 
                                class="btn btn-lg mt-2 ${canAfford ? 'btn-accent' : 'btn-secondary'}" 
                                ${canAfford ? `onclick="attemptRedeem('${product.id}', ${product.points})"` : 'disabled'}
                            >
                                Canjear
                            </button>
                            ${!canAfford ? '<p class="text-danger small mt-2">Puntos Insuficientes</p>' : ''}
                        </div>
                    </div>
                </div>
            `;
        }

        // Funci√≥n para simular el intento de canje
        function attemptRedeem(productId, pointsCost) {
            // Verifica nuevamente si los puntos son suficientes (solo por seguridad)
            if (userPoints < pointsCost) {
                alert('‚ùå Puntos Insuficientes. Necesitas ' + pointsCost.toLocaleString('es-CL') + ' puntos.');
                return;
            }

            // Simulaci√≥n de API de Canje: 70% de √©xito
            const success = Math.random() > 0.3; 
            const productName = redeemableProducts.find(p => p.id === productId).name;

            if (success) {
                alert(`‚úÖ ¬°Canje Exitoso! Has obtenido el ${productName}. Se ha agregado a tu carrito (o a tus pedidos pendientes) y tus puntos se han reducido.`);
                // Aqu√≠ ir√≠a la l√≥gica real: restar puntos y registrar el pedido
                // Para la simulaci√≥n, simplemente recargamos
                // window.location.reload(); 
            } else {
                alert('‚ùå Error en el canje. Por favor, intenta de nuevo m√°s tarde.');
            }
        }

        // Inicializaci√≥n
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('current-points').textContent = userPoints.toLocaleString('es-CL');
            
            const redeemContainer = document.getElementById('redeem-options');
            redeemContainer.innerHTML = redeemableProducts.map(renderRedeemCard).join('');
        });
    </script>

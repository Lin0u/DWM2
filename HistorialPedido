    <script>
        const formatCurrency = (number) => {
            return '$' + Math.round(number || 0).toLocaleString('es-CL');
        };

        function renderOrderItem(order) {
            let productsText = "";

            Object.keys(order.products).forEach(productId => {
                const item = order.products[productId];
                const itemPrice = item.price || 0;
                const itemSubtotal = item.quantity * itemPrice;
                productsText += `â€¢ ${item.name} (x${item.quantity}) - ${formatCurrency(itemSubtotal)}\n`;
            });

            return `
                <div class="order-item">
                    <div class="order-details">
                        <div class="order-info">
                            <span>ID de Pedido: <strong class="text-warning">#${order.id}</strong></span>
                            <span>Fecha: ${order.date}</span>
                            <span>Total: <strong>${formatCurrency(order.total)}</strong></span>
                            <small class="text-info">Pago: ${order.paymentMethod}</small>
                        </div>
                        <div class="order-products mt-2">
                            ${productsText.trim()}
                        </div>
                    </div>
                    <button type="button"
                            class="btn btn-primary btn-repeat"
                            onclick="repeatOrder('${order.id}')">
                        Â¿Repetir pedido?
                    </button>
                </div>
            `;
        }

        function loadOrderHistory() {
            const historyContainer = document.getElementById('orders-list');
            const emptyMessage = document.getElementById('empty-history');
            const history = JSON.parse(localStorage.getItem('orderHistory')) || [];

            if (history.length === 0) {
                emptyMessage.style.display = 'block';
                return;
            }

            emptyMessage.style.display = 'none';
            historyContainer.innerHTML = '';

            // Mostrar los mÃ¡s recientes primero
            history.slice().reverse().forEach(order => {
                historyContainer.innerHTML += renderOrderItem(order);
            });
        }

        function repeatOrder(orderId) {
            const history = JSON.parse(localStorage.getItem('orderHistory')) || [];
            const orderToRepeat = history.find(order => order.id === orderId);

            if (orderToRepeat) {
                // Solo guardamos los productos para repetir (no el total ni el mÃ©todo de pago)
                localStorage.setItem('shoppingCart', JSON.stringify(orderToRepeat.products));
                alert(`Pedido #${orderId} cargado en tu carrito. Â¡Ya puedes ir a pagar!`);
                window.location.href = "Carrito.html";
            } else {
                alert("Error: El pedido solicitado no fue encontrado.");
            }
        }

        window.onload = loadOrderHistory;
    </script>
